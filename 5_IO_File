#!/usr/bin/perl

sub Po_test1{
  # 1. open and read the file
  print "call Po_test1()\n";
  my $filename="./Po_test_file";
  open(FILE, $filename) || die "Can't open file $filename : $!\n";

  # read file
  #while($_=<FILE>){
  #  print "$_";
  #}
  print while(<FILE>);
  close(FILE);
  print "Po_test1() exit\n";
}

sub Po_clear{
  print "\n\n\n";
}

sub Po_test2{
  # 2. input test
  print "call Po_test2()\n";

  print "please input 123\n";
  $input=<STDIN>;
  chomp $input;
  if($input == 123){
    print "you scan 123\n";
  }else{
    print "you scan not 123\n";
  }
  print "Po_test2() exit\n";
}

sub Po_test3{
  # 3. output test write to ./Po_test_output_file
  print "call Po_test3()\n";
  use strict;
  use warnings;
   
  open(my $fh, '>', './Po_test_output_file');
  print $fh "My first report generated by perl\n";
  close $fh;
  print "write done\n";
  print "Po_test3() exit\n";
}

sub Po_test4{
  # 4. output test
  print "call Po_test4()\n\n";

  $test="ls -l";
  print "111111\n";
  print "$test";             # Output ls -l
  print "\n\n";

  print "222222\n";
  print "\$test";            # Output $test
  print "\n\n";

  print "333333\n";
  print '$test';             # Output $test
  print "\n\n";

  print "444444\n";
  print `$test`;             # Output files in this directory
  print "\n\n";

  print "Po_test4() exit\n";
}

&Po_test1

&Po_test4
&Po_test3
&Po_test2
#&Po_clear
